@model FileUpload.Models.GroupTagging

@{
    ViewBag.Title = "Index";
}

<h3>Create Groups for Tagging</h3>

<p class="distance">    
    <a href="@Url.Content("~/Masterfile/AddGroupTagging")" class="btn btn-success" style="margin-left:10px;">Add Group</a>
</p>

<table class="table table-striped distance" id="tbl">
    <thead>
        <tr>
            <th>Group Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
       @foreach (var item in Model.GroupTagHead)
       {
           
            <tr>               
               <td style="display:none;">@Html.DisplayFor(a => item.GroupID)</td>
                <td>@Html.DisplayFor(a => item.GroupName)</td>
                <td>
                   <a href="@Url.Content("~/Masterfile/EditGroupTaggings/" + item.GroupID )">Edit</a> |
                   <a href="@Url.Content("~/Masterfile/DeleteGroupTaggings/" + item.GroupID )">Delete</a>
                  
                </td>
               
            </tr>
    
       }
        
    </tbody>

</table>

@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {

            $(function () {

                table = $("#tbl").dataTable({
                    "bPaginate": true,
                    "bLengthChange": false,
                    "bFilter": true,
                    "bSort": false,
                    "bInfo": false,
                    "oTableTools": {
                        "sRowSelect": "single",
                        "sSelectedClass": "selected"
                    }
                });

            });


           


        });


    </script>   
   } 
        