@model FileUpload.Models.Category

@{
    ViewBag.Title = ViewBag.Title;
}

<h3 style="margin-left:10px;">@ViewBag.Title</h3>

<form method="post" action="@Url.Content("~/Category/Create")"  class="distance">    
    <div class="col-xs-5">
        <div class="form-group col-sm-12">
            <label for="CategoryName">Category Description</label>
            @Html.TextBoxFor(model => model.CategoryName, new { @class = "form-control", @required="required" })            
            @Html.HiddenFor(model => model.CategoryID)
        </div>
        
        <button type="submit" class="btn btn-success" style="margin-left:15px;">Save Category</button>
        <a href="@Url.Content("~/Category")" class="btn btn-warning">Back to list</a>
        <br />
        <span>@ViewBag.Msg</span>
    </div>    
</form>