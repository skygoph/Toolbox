@model IEnumerable<FileUpload.Models.Memo>

@{
    ViewBag.Title = "Memo";
}

<h2 style="margin-left:10px;">@ViewBag.Title</h2>

<p class="distance">    
    <a href="@Url.Content("~/Memo/Create")" class="btn btn-success" style="margin-left:10px;">Add Department Order</a>
</p>
<table class="table table-striped distance">
    <thead>
        <tr>
            <th>Upload Date</th>
            <th>Document No.</th>
            <th>Subject</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.UploadDate.ToShortDateString())</td>
                <td>@Html.DisplayFor(modelItem => item.DocNo)</td>
                <td>@Html.DisplayFor(modelItem => item.Subject)</td>
                <td>
                    <a href="@Url.Content("~/Memo/Edit/" + item.intTrnMemo )" >Edit</a> |
                    <a href="@Url.Content("~/Memo/Delete/" + item.intTrnMemo )" >Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>
