@model IEnumerable<FileUpload.Models.Policy>

@{
    ViewBag.Title = "Memo Circular Edit";
}

<h3 style="margin-left:10px;">@ViewBag.Title</h3>

@*<p class="distance">    
    <a href="@Url.Content("~/Memo/Create")" class="btn btn-success" style="margin-left:10px;">Add Memo</a>
</p>*@
<table class="table table-striped distance" id="tbl">
    <thead>
        <tr>            
            <th class="col-sm-1 text-center">Date Effective</th>
            <th class="col-sm-2 text-center">Memo No.</th>            
            <th>Title</th>
            <th>Description</th>
            <th class="col-sm-1 text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>                
                <td class="text-center">@item.DateEffective.ToShortDateString()</td>
                <td class="text-center">@item.DocNo</td>                
                <td>@item.PolicyTitle</td>
                <td>@item.PolicyDescription</td>
                <td class="text-center">
                    <a href="@Url.Content("~/Policy/Edit/" + item.intTrnPolicy )" >Edit</a>     &nbsp;&nbsp;
                    @if (Convert.ToBoolean(Session["isAdmin"]) == true) {
                        <a href="@Url.Content("~/Policy/Delete/?fileName=" + @item.FileName + "&intId=" + @item.intTrnPolicy)" >Delete</a>
                    }               
                </td>
            </tr>
        }
    </tbody>

</table>

@section scripts
{
    
    <script type="text/javascript">
        $(function () {

            table = $("#tbl").dataTable();

        });
    </script>    
    
    
    
}