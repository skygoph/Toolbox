@model IEnumerable<FileUpload.Models.Policy>

@{
    ViewBag.Title = "Memo Circular Download";
}

<h3 style="margin-left:10px;">@ViewBag.Title</h3>

@*<p class="distance">    
    <a href="@Url.Content("~/Memo/Create")" class="btn btn-success" style="margin-left:10px;">Add Memo</a>
</p>*@
<table class="table table-striped distance" id="tbl">
    <thead>
        <tr>            
            <th class="col-sm-1 text-center">Date Effective</th>
            <th class="col-sm-2 text-center">Memo No.</th>            
            <th>Title</th>
            <th>Description</th>
            <th class="col-sm-2 text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>                
                <td class="text-center">@item.DateEffective.ToShortDateString()</td>
                <td class="text-center">@item.DocNo</td>                
                <td>@item.PolicyTitle</td>
                <td>@item.PolicyDescription</td>
                <td class="text-center">
                    <a href="@Url.Content("~/Policy/PreviewFile/" + item.FileName )" target="_blank" >Preview</a> &nbsp; | &nbsp;
                    <a href="@Url.Content("~/Policy/DownloadFile/" + item.FileName )" >Download</a> &nbsp;  
                    @*<a href="@Url.Content("~/Policy/ViewUploadTaggings/" + item.intTrnPolicy )" target="_blank" >Report</a>*@                   
                </td>
            </tr>
        }
    </tbody>

</table>

@section scripts
{
    
    <script type="text/javascript">
        $(function () {

            table = $("#tbl").dataTable();

        });
    </script>    
    
    
    
}