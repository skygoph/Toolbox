@model FileUpload.Models.DeptPrefix

@{
    ViewBag.Title = ViewBag.Title;
}

<h3 style="margin-left:10px;">@ViewBag.Title</h3>

<form method="post" action="@Url.Content("~/Prefix/Edit")"  class="distance">    
    <div class="col-xs-5">
        <div class="form-group col-sm-12">
            <label for="intMstDepartment">Department</label>
            @Html.DropDownListFor(model => model.intMstDepartment, (SelectList)@ViewBag.depts, new { @class = "form-control", @style="width: 100%;"})
            <input type="text" readonly="" id="dept" class="form-control" />
        </div>

        <div class="form-group col-sm-12">
            <label for="PrefixName">Prefix Name</label>
            @Html.TextBoxFor(model => model.PrefixName, new { @class = "form-control", @required="required" })            
            @Html.HiddenFor(model => model.intMstPrefix)
        </div>
        
        <button type="submit" class="btn btn-success" style="margin-left:15px;">Save Prefix</button>
        <a href="@Url.Content("~/Prefix")" class="btn btn-warning">Back to list</a>
        <br />
        <span>@ViewBag.Msg</span>
    </div>    
</form>

@section scripts{
    <script type="text/javascript">
        $(function () {
            $('#intMstDepartment').hide();
            $('#dept').val($('#intMstDepartment option:selected').text());            
        });
    </script>
    
}