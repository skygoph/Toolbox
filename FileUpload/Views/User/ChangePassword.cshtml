@model FileUpload.Models.ChangePassword

@{
    ViewBag.Title = ViewBag.Title;
}

<h2 style="margin-left:10px;">@ViewBag.Title</h2>

<form method="post" action="@Url.Action("ChangePassword")" class="form-horizontal distance">
    <div class="col-sm-5">
        @Html.HiddenFor(model => model.Username)

        <div class="form-group col-sm-12">
            <label for="Current Password">Current Password</label>
            @Html.PasswordFor(model => model.CurrentPassword, new { @class = "form-control", @required="required" })
        </div>

        <div class="form-group col-sm-12">
            <label for="New Password">New Password</label>
            @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control", @required="required" })
        </div>

        <div class="form-group col-sm-12">
            <label for="Confirm Password">Confirm Password</label>
            @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", @required="required" })
        </div>

        <button type="submit" class="btn btn-success" style="margin-left:15px;">Change Password</button>        
        <br />
        <br />
        @*<span></span>*@
        @if ((ViewBag.Msg != null) && (ViewBag.Msg != ""))
        { 
            <div class="col-xs-12 text-center" id="msg">
                @if (string.Equals(ViewBag.Msg, "Password successfully change."))
                { 
                    <span class="alert alert-success col-sm-12">@ViewBag.Msg</span>
                }
                else
                {
                    <span class="alert alert-danger col-sm-12">@ViewBag.Msg</span>
                }
            </div>
        }
    </div>
</form>

@section scripts
{
    <script type="text/javascript">
        $(function () {
            $('#msg').removeClass('hide');
        });
    </script>    
}